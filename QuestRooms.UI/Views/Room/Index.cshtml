@model List<QuestRooms.BLL.DTOmodels.RoomDTO>
@{
    ViewBag.Title = "Quest Rooms";
}
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12 mt-3">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">@item.Name</h4>
                </div>
                <div class="card-body">
                    <p class="card-text">@item.Description</p>
                    <a href="@Url.Action("RoomDetails","Room", new { id= item.Id})" class="btn btn-primary">See more</a>
                </div>
            </div>
        </div>


    }
</div>
